{% extends 'SwdAnalyzerBundle::layout.html.twig' %}


{% block title %}{% trans %}Profile{% endtrans %}{% endblock %}


{% block body %}
<div class="page-header">
  <h1>{% trans %}Profile{% endtrans %}</h1>
</div>
<div>
  {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.serverIP) }}
    {{ form_row(form.name) }}
    {{ form_row(form.key) }}
    {{ form_row(form.mode) }}
  <h2>{% trans %}Protections{% endtrans %}</h2>
    {{ form_row(form.whitelistEnabled) }}
    {{ form_row(form.blacklistEnabled) }}
    {{ form_row(form.integrityEnabled) }}
    {{ form_row(form.floodingEnabled) }}
  <h3>{% trans %}Blacklist{% endtrans %}</h3>
    {{ form_row(form.blacklistThreshold) }}
  <h3>{% trans %}Flooding{% endtrans %}</h3>
    {{ form_row(form.floodingTime, {'input_group': {'prepend': 'Sec.'|trans}}) }}
    {{ form_row(form.floodingThreshold) }}
  {{ form_end(form) }}
</div>
{% endblock %}
